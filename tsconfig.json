{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "./src",
    "checkJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "app": ["./app/*", "./app/"],
      "components": ["./components/*", "./components/"],
      "config": ["./config/*", "./config"],
      "firestore": ["./firestore/*", "./firestore/"],
      "img": ["./theme/img/*", "./theme/img/"],
      "lib": ["./lib/*", "./lib"],
      "realmdb": ["./realmdb/*", "./realmdb"],
      "store": ["./store/*", "./store"],
      "theme": ["./theme/*", "./theme"],
      "types": ["./types/*", "./types/"]
    }
  },
  "exclude": ["node_modules", "e2e"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.svg",
    "**/*.png"
  ]
}
